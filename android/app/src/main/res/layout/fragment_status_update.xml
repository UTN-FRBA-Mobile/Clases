<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.StatusUpdateFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mirtha"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"/>
        <TextView android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mirtha Legrand"
            android:layout_toEndOf="@id/picture"
            android:layout_alignTop="@id/picture"
            android:layout_marginBottom="4dp"
            android:textStyle="bold" />
        <TextView android:id="@+id/privacyButton"
            style="@style/settingButton"
            android:layout_toEndOf="@id/picture"
            android:layout_below="@id/name"
            android:drawableStart="@drawable/ic_group_black_18dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down_black_18dp"
            android:text="@string/friends"/>
        <TextView
            style="@style/settingButton"
            android:layout_toEndOf="@id/privacyButton"
            android:layout_below="@id/name"
            android:drawableStart="@drawable/ic_add_black_18dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down_black_18dp"
            android:text="@string/album"/>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="@string/whatAreYouThinking"
        android:inputType="textAutoCorrect"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/colorsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:clipToPadding="false"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_color" />
        <ImageView
            style="@style/colorButton"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_chevron_left_black_24dp" />
        <ImageView
            style="@style/colorButton"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_grid_on_black_24dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="@string/addToYourPost" />
        <ImageView style="@style/addToPostButton"
            android:src="@drawable/ic_photo_library_black_24dp"
            app:tint="#40c040"/>
        <ImageView style="@style/addToPostButton"
            android:src="@drawable/ic_person_add_black_24dp"
            app:tint="#4080ff"/>
        <ImageView style="@style/addToPostButton"
            android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"
            app:tint="#ffc000"/>
        <ImageView style="@style/addToPostButton"
            android:src="@drawable/ic_location_on_black_24dp"
            app:tint="#ff2020"/>
    </LinearLayout>
</LinearLayout>