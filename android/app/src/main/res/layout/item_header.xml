<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView android:id="@+id/nameText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_alignParentStart="true"
              android:textSize="17sp"
              android:textStyle="bold"
              tools:text="Nombre" />
    <ImageView android:id="@+id/certifiedIcon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@id/nameText"
               android:baseline="19dp"
               android:layout_toEndOf="@id/nameText"
               android:src="@drawable/ic_check_circle_black_24dp" />
    <TextView android:id="@+id/usernameText"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_toEndOf="@id/certifiedIcon"
              android:layout_alignBaseline="@id/nameText"
              tools:text="\@username - date" />
    <TextView android:id="@+id/tweetContent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/nameText"
              tools:text="Contenido del tweet acÃ¡" />
</RelativeLayout>